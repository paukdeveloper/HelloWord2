<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_alignParentLeft="true"
        android:id="@+id/characters_boat_name"
        android:paddingBottom="8dp"
        android:layout_toLeftOf="@+id/characters_boat_value"
        android:layout_toStartOf="@+id/characters_boat_value"
        android:paddingLeft="24dp"
        android:paddingTop="8dp"
        android:textSize="16sp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"/>

    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/characters_boat_value"
        android:layout_width="wrap_content"
        android:paddingBottom="8dp"
        android:textSize="16sp"
        android:paddingRight="24dp"
        android:paddingTop="8dp"
        android:layout_height="wrap_content"
        android:maxLines="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/characters_boat_name"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/colorListDivider" />

</RelativeLayout>